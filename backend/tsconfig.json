{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./hardhat.config.ts", "./scripts", "./test", "./ignition", "./types"],
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"]
}
